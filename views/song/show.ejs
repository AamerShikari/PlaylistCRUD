<%- include('../partials/header') %>
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Show Song Page</title>
</head>
<body>
    <h1><%= song.name %> </h1>
    <h2> &nbsp; &nbsp; by <%= song.artist %> </h2>

    <form action="/song/<%= song._id %>?_method=DELETE" method="POST">
        <button type="submit">Delete Song</button>
    </form>

    <h2>Reviews</h2>
    <ul>
        <% song.reviews.forEach(review => { %> 
            <li><%= review.user %>: <%= review.content %> </li>
        <% }) %> 
    </ul>

    <h2>Add Review</h2>
    <form action="/song/<%= song._id %>/<%= user.name %>/songReview" method="POST">
        <input type="text" name="content"> <br>
        <button type="submit">Add Review</button>
    </form>
</body>
</html>