<%- include('../partials/header') %>
<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Add Song</title>
  </head>
  <body id="addSong">
    <div class="d-flex justify-content-center">
      <h1 style="color:#e5383b;">Add New Song Page</h1>
    </div>

    <div class="d-flex justify-content-center">
      <form action="/song/create" method="POST">
        <div class="form-group">
          <label style="color: #e5383b;">Song Name:</label>
          <input
            type="text"
            class="form-control"
            placeholder="Enter Name Here"
            name="name"
          />
          <label style="color: #e5383b;">Song Artist:</label>
          <input
            type="text"
            class="form-control"
            placeholder="Enter Artist Here"
            name="artist"
          />
          <small style="color: #e5383b;"
            >Show Us Whatcha Got! Any Song, Any Artist, AnyTime!</small
          >
        </div>
        <button type="submit" class="btn btn-dark formBtn">Submit</button>
      </form>
    </div>
  </body>
</html>

